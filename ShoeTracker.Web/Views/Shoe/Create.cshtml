@model ShoeTracker.Data.Models.Entities.Shoe

@{
    ViewData["Title"] = "Add Shoe";
}

<div class="container mt-4">
    <h2><i class="bi bi-plus-circle"></i> Add New Running Shoe</h2>

    <form asp-action="Create" method="post" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="TotalDistance" />

        <div class="mb-3">
            <label asp-for="Brand" class="form-label">Brand</label>
            <input asp-for="Brand" class="form-control" placeholder="Nike, Adidas, Asics..." />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Model" class="form-label">Model</label>
            <input asp-for="Model" class="form-control" placeholder="Pegasus 40, Ultra Boost..." />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Shoe Category</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">-- Select Category --</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
            <input asp-for="PurchaseDate"
                   type="date"
                   class="form-control"
                   value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Add
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}