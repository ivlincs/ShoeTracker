@model ShoeTracker.Data.Models.Statistics.ShoeStatistics

@{
    ViewData["Title"] = "Statistics";
}

<div class="container mt-4">
    <h2><i class="bi bi-graph-up"></i> My Statistics</h2>

    <div class="row mt-4">
        <div class="col-md-3 mb-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-shoe-fill" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h3 class="mt-2">@Model.TotalShoes</h3>
                    <p class="text-muted mb-0">Total Shoes</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-speedometer2" style="font-size: 3rem; color: #198754;"></i>
                    <h3 class="mt-2">@Model.TotalDistance.ToString("F0") km</h3>
                    <p class="text-muted mb-0">Total Distance</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-list-task" style="font-size: 3rem; color: #6610f2;"></i>
                    <h3 class="mt-2">@Model.TotalRuns</h3>
                    <p class="text-muted mb-0">Total Runs</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: #dc3545;"></i>
                    <h3 class="mt-2">@Model.ShoesNeedingReplacement</h3>
                    <p class="text-muted mb-0">Need Replacement</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h5><i class="bi bi-bar-chart"></i> Average Shoe Mileage</h5>
            <p class="display-6 text-primary">@Model.AverageDistancePerShoe.ToString("F1") km</p>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to Shoes</a>
    </div>
</div>