@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">
        <i class="bi bi-shoe-fill"></i> Welcome to ShoeTracker!
    </h1>
    <p class="lead mt-3">
        Track your running shoe mileage and know when it's time for a new pair.
    </p>

    @if (!User.Identity!.IsAuthenticated)
    {
        <div class="mt-5">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">
                <i class="bi bi-person-plus"></i> Register
            </a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
        </div>
    }
    else
    {
        <div class="mt-5">
            <a asp-controller="Shoe" asp-action="Index" class="btn btn-success btn-lg">
                <i class="bi bi-shoe-fill"></i> My Running Shoes
            </a>
            <a asp-controller="Shoe" asp-action="Create" class="btn btn-outline-success btn-lg">
                <i class="bi bi-plus-circle"></i> Add Shoe
            </a>
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-data" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="mt-3">Track Every Run</h5>
                    <p>Record each run and watch your mileage grow.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up" style="font-size: 3rem; color: #198754;"></i>
                    <h5 class="mt-3">Visual Progress</h5>
                    <p>See shoe wear with visual progress indicators.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-bell" style="font-size: 3rem; color: #ffc107;"></i>
                    <h5 class="mt-3">Replacement Alerts</h5>
                    <p>Get notified at 600+ km mileage threshold.</p>
                </div>
            </div>
        </div>
    </div>
</div>